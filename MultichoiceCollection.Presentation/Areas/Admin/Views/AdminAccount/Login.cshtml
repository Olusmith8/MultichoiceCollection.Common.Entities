@using MultichoiceCollection.Models
@model MultichoiceCollection.Presentation.Models.AdminLoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";

}
@using (Html.BeginForm("Login", "AdminAccount", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "frm-single"}))
{
    @Html.AntiForgeryToken()
    <section class="inside">
        <div class="title">
            <strong>Admin</strong> Area
        </div>
        <!-- /.title -->
        <div class="frm-title">Login Admin</div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <!-- /.frm-title -->
        
        <div class="frm-input">
            @Html.TextBoxFor(m => m.Email, new { @class = "frm-inp", placeholder = "Email" })
            <i class="fa fa-bank frm-ico"></i>
 </div>
        <!-- /.frm-input -->
        <div class="frm-input">
            @Html.PasswordFor(m => m.Password, new { @class = "frm-inp", placeholder = "Password" })
            <i class="fa fa-lock frm-ico"></i>
        </div>
        <!-- /.clearfix -->
        <button type="submit" class="frm-submit">Login<i class="fa fa-sign-in"></i></button>

        <!-- /.footer -->
    </section>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}