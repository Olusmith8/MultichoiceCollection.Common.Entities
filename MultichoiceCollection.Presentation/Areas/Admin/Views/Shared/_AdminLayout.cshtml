</head>
<body>
    <section class="main-menu">
        <header class="header">
            <a href="/" class="logo"><img src="~/assets/images/logo.png" /></a>
            <button type="button" class="button-close fa fa-times js__menu_close"></button>
        </header>
        <!-- /.header -->
        <div class="content">
            <div class="navigation">
                <h5 class="title"><span>Navigation</span>
                </h5>
                
                <!-- /.title -->
                <ul class="menu js__accordion">
                    <li class="@ViewBag.CurrentDashboard">
                        <a class="waves-effect" href="@Url.Action("Index", "Dashboard")"><i class="menu-icon ti-dashboard"></i><span>Dashboard</span></a>
                    </li>
                    <li class="@ViewBag.ViewUsers">
                        <a class="waves-effect" href="@Url.Action("Index", "AdminAccount")"><i class="fa fa-user"></i><span>View Users</span></a>
                    </li>
                    <li class="@ViewBag.Register">
                        <a class="waves-effect" href="@Url.Action("Register", "AdminAccount")"><i class="fa fa-user"></i><span>Create User</span></a>
                    </li>
                    <li class="@ViewBag.Transactions">
                        <a class="waves-effect" href="@Url.Action("Transactions", "Dashboard")"><i class="fa fa-money"></i><span>Transactions</span></a>
                    </li>
                    <li class="@ViewBag.Reports">
                        <a class="waves-effect" href="@Url.Action("Reports", "Dashboard")"><i class="fa fa-area-chart"></i><span>Reports</span></a>
                    </li>
                    <li class="@ViewBag.ResetPassword">
                        <a class="waves-effect" href="@Url.Action("ForgotPassword", "AdminAccount")"><i class="fa fa-lock"></i><span>Reset Password</span></a>
                    </li>
                </ul>
               
            </div>
            <!-- /.navigation -->
        </div>
        <!-- /.content -->
    </section>
    <!-- /.main-menu -->
    <section class="fixed-navbar">
        <div class="pull-left">
            <button type="button" class="menu-mobile-button glyphicon glyphicon-menu-hamburger js__menu_mobile"></button>
            <h1 class="page-title">Admin Area | @ViewBag.Title</h1>
            <!-- /.page-title -->
        </div>
        <!-- /.pull-left -->
        <div class="pull-right">
             <div class="ico-item">
                <i class="ti-user"></i>
                <ul class="sub-ico-item">
<li><a href="@Url.Action("LogOff","AdminAccount")">Log Out</a></li>
                </ul>
                <!-- /.sub-ico-item -->
            </div>
        </div>
        <!-- /.pull-right -->
    </section>
    <!-- /.fixed-navbar -->
    
    <section id="wrapper">
        <div class="main-content">
            @Html.Partial("_alert")
            @RenderBody()
            <!-- /.row -->
            <footer class="footer">
                <ul class="list-inline">
                    <li>@DateTime.UtcNow.Year &copy; Multichoice Collection. All rights reserved.</li>
                    <li><a href="#">Privacy</a></li>
                    <li><a href="#">Terms</a></li>
                    <li><a href="#">Help</a></li>
                </ul>
            </footer>
        </div>
        <!-- /.main-content -->
        
</section><!--/#wrapper -->
